@model CustomerManagementPortal.Models.CustomerModel

@{
    ViewBag.Title = "取引履歴";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(Model => Model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.Tel)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.Comment)
        </th>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(Model => Model.Name)
        </td>
        <td>
            @Html.DisplayFor(Model => Model.Email)
        </td>
        <td>
            @Html.DisplayFor(Model => Model.Tel)
        </td>
        <td>
            @Html.DisplayFor(Model => Model.Comment)
        </td>
    </tr>
</table>

<p>
    @Html.ActionLink("新規登録", "Create", new { id = Model.CustomerId })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(Model => Model.Histories.FirstOrDefault().VisitDate)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.Histories.FirstOrDefault().Content)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.Histories.FirstOrDefault().Comment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Histories) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VisitDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.ActionLink("編集", "Edit", new { id=item.CustomerHistoryModelId }) |
            @Html.ActionLink("詳細", "Details", new { id =item.CustomerHistoryModelId }) |
